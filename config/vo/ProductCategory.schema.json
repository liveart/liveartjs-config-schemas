{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "ProductCategory",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "thumb": {
      "type": "string"
    },
    "products": {
      "items": {
        "$ref": "Product.schema.json"
      },
      "type": "array"
    },
    "categories": {
      "items": {
        "$ref": "ProductCategory.schema.json"
      },
      "type": "array"
    }
  },
  "required": [
    "id",
    "name"
  ],
  "additionalProperties": false
}

