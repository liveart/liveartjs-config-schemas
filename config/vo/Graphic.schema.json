{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "https://raw.githubusercontent.com/liveart/liveartjs-config-schemas/develop/config/vo/Graphic.schema.json",
  "title": "Graphic",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "unique": true
    },
    "name": {
      "type": "string"
    },
    "categoryId": {
      "type": "string"
    },
    "image": {
      "type": "string"
    },
    "colors": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "colorize": {
      "type": "boolean"
    },
    "parseColorAreas": {
      "type": "boolean"
    },
    "description": {
      "type": "string"
    },
    "multicolor": {
      "type": "boolean"
    },
    "thumb": {
      "type": "string"
    },
    "colorizableElements": {
      "type": "array",
      "items": {
        "properties": {
          "name": {
            "type": "string"
          },
          "query": {
            "type": "string"
          },
          "colors": {
            "type": "array",
            "items": {
              "properties": {
                "name": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "value"
              ]
            }
          }
        },
        "required": [
          "name",
          "query"
        ]
      }
    }
  },
  "required": [
    "id",
    "name",
    "categoryId",
    "image"
  ],
  "additionalProperties": false
}
